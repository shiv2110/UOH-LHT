<%- include("../partials/header4.ejs"); -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MSc Physics</title>

    <script>
      function addColour(){
        document.getElementById("tuts").style.color = "rgba(239, 68, 68)";
      }
    </script>
</head>
<body>
    <script>addColour();</script>
    <section class="text-gray-600 body-font">
      <button onclick="window.location.href = '/faculty/tutorials/add-tuts'" 
      class="flex mx-auto mt-20 text-white bg-red-500 border-0 py-2 px-8 focus:outline-none
       hover:bg-red-600 rounded text-lg">Add Tutorial</button>

    
       <div class="container px-5 py-24 mx-auto ">

        <% var isFound = 0%>
        
        <% if (tutorials.length > 0) { %>
          <div class="flex flex-wrap -m-4 lg:mx-8">
            <% for(let i = 0; i < tutorials.length; i++) { %>

              <% if (tutorials[i].course == "msc-physics") { %>
                <% var isFound = 1%>
              
              <div class="p-4 w-full md:w-1/3">
                <div class="flex rounded-lg h-full bg-gray-100 p-8 flex-col">
                  <div class="flex items-center mb-3">
                 
                    <h2 class="text-gray-900 text-lg title-font font-medium"><%=tutorials[i].title.toLowerCase().split(' ').map(s => s.charAt(0).toUpperCase() + s.substring(1)).join(' ')%></h2>
                  </div>
                  <div class="flex-grow">
                    <p class="leading-relaxed text-base my-3"> <strong>Semester: </strong> <%= tutorials[i].semester %></p>
                    
                    <div class="flex justify-end space-x-10">
                        <iframe width="420" height="315"
                            src="https://www.youtube.com/embed<%=tutorials[i].source.substring(tutorials[i].source.lastIndexOf('/'), )%>" >
                        </iframe>
                    </div>

                    <p class="leading-relaxed text-base my-3"> 
                       <%= tutorials[i].description.toLowerCase().split('. ').map(s => s.charAt(0).toUpperCase() + s.substring(1)).join('. ') %></p>

                       <div class="flex justify-end space-x-10">

                        
                          <form action="/faculty/tutorials/delete/<%=tutorials[i]._id%>/<%=tutorials[i].course%>" method="post">
                            <button class="mt-3 text-red-500 inline-flex items-center"> <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6"  fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg> </button>
                          </form>
                        

                        <form action="/faculty/tutorials/edit-tutorial/<%=tutorials[i]._id%>" method="">
                          <button class="mt-3 text-red-500 inline-flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
                              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                            </svg>
                          </button>
                        </form>
                        
                      </div>
                    
                  </div>
                </div>
              </div>
              <% } %> 
            
            <% } %> 
          </div>
          <% if (isFound == 0) {%>
            <div class="h-20"></div>
            <div class="h-20">
              <h1 class="flex justify-center text-3xl pt-10">No MSc Physics Tutorials Available</h1>
            </div>

          <% } %>
        <% } else { %>
          <div class="h-20"></div>
          <div class="h-20">
            <h1 class="flex justify-center text-3xl pt-10">No Tutorials Available</h1>
          </div>
        <% } %>
      
    </div>

  
       
    </section>


    <div class="mt-20 pt-20">
      <%- include("../partials/footer.ejs"); -%>
    </div>

    
</body>
</html>