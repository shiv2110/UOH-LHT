<%- include("../partials/header2.ejs"); -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Tutorials</title>

    <script>
        function addColour(){
          document.getElementById("tuts").style.color = "rgba(239, 68, 68)";
        }
    </script>
</head>
<body>
  <script>addColour();</script>

  <section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto ">

        <% var isFound = 0%>
        
        <% if (tutorials.length > 0) { %>
          <div class="flex flex-wrap -m-4 lg:mx-8">
            <% for(let i = 0; i < tutorials.length; i++) { %>

              <% if (tutorials[i].course == user.course && tutorials[i].semester == user.semester) { %>
                <% var isFound = 1%>
              
              <div class="p-4 w-full md:w-1/3">
                <div class="flex rounded-lg h-full bg-gray-100 p-8 flex-col">
                  <div class="flex items-center mb-3">
                 
                    <h2 class="text-gray-900 text-lg title-font font-medium"><%=tutorials[i].title.toLowerCase().split(' ').map(s => s.charAt(0).toUpperCase() + s.substring(1)).join(' ')%></h2>
                  </div>
                  <div class="flex-grow">
                    <p class="leading-relaxed text-base my-3"> <strong>Semester: </strong> <%= tutorials[i].semester %></p>
                    
                    <div class="flex justify-end space-x-10">
                        <iframe width="420" height="315"
                            src="https://www.youtube.com/embed<%=tutorials[i].source.substring(tutorials[i].source.lastIndexOf('/'), )%>" >
                        </iframe>
                    </div>

                    <p class="leading-relaxed text-base my-3"> 
                       <%= tutorials[i].description.toLowerCase().split('. ').map(s => s.charAt(0).toUpperCase() + s.substring(1)).join('. ') %></p>
                    
                  </div>
                </div>
              </div>
              <% } %> 
            
            <% } %> 
          </div>
          <% if (isFound == 0) {%>
            <div class="h-20"></div>
            <div class="h-20">
              <h1 class="flex justify-center text-3xl pt-10">No <%=user.course.toUpperCase()%> - <%=user.semester%> 
                Tutorials Available</h1>
            </div>

          <% } %>
        <% } else { %>
          <div class="h-20"></div>
          <div class="h-20">
            <h1 class="flex justify-center text-3xl pt-10">No Tutorials Available</h1>
          </div>
        <% } %>
      
    </div>
     
     
  </section>


  <div class="mt-20 pt-20">
    <%- include("../partials/footer.ejs"); -%>
  </div>


</body>
</html>